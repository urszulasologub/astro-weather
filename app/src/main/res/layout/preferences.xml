<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TableLayout
		android:id="@+id/tableLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal">

			<TextView
				android:id="@+id/text_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:paddingBottom="10dp"
				android:text="@string/preferences"
				android:textSize="24sp" />
		</TableRow>

		<TableRow
			android:layout_width="0dp"
			android:layout_height="wrap_content">


			<TextView
				android:id="@+id/x_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|left"
				android:text="x:"
				android:visibility="visible" />

			<EditText
				android:id="@+id/x_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:ems="10"
				android:inputType="numberDecimal|numberSigned"
				android:maxLength="8" />

			<TextView
				android:id="@+id/textView7"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="x:"
				android:visibility="invisible" />
		</TableRow>

		<TableRow
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0">


			<TextView
				android:id="@+id/y_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_horizontal|left"
				android:text="y:"
				android:visibility="visible" />

			<EditText
				android:id="@+id/y_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:ems="10"
				android:inputType="numberDecimal|numberSigned"
				android:maxLength="8" />

			<TextView
				android:id="@+id/textView8"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="y:"
				android:visibility="invisible" />

		</TableRow>

		<TableRow
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_weight="0">

			<TextView
				android:id="@+id/textView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="2"
				android:gravity="center_horizontal|left"
				android:text="@string/refresh_time" />

			<Spinner
				android:id="@+id/time_spinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:layout_weight="1"
				android:gravity="center_horizontal" />
		</TableRow>

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="10dp">

			<Button
				android:id="@+id/ok_button"
				style="@style/Widget.AppCompat.Button"
				android:layout_width="wrap_content"
				android:freezesText="false"
				android:text="@android:string/ok" />
		</TableRow>
	</TableLayout>

	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tableLayout">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center">

			<TextView
				android:id="@+id/add_city_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/enter_location"
				android:textSize="18sp" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center">

			<EditText
				android:id="@+id/add_city_input"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:gravity="center"
				android:inputType="textPersonName" />
		</TableRow>

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center">

			<Button
				android:id="@+id/add_city_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/add_city" />
		</TableRow>

	</TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>