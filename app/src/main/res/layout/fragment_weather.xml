<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/design_default_color_primary">

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/remove_city_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_weight="1"
		android:clickable="true"
		android:visibility="invisible"
		app:backgroundTint="#7C4DFF"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@android:drawable/ic_menu_delete" />

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:id="@+id/city"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="10"
			android:gravity="center"
			android:paddingTop="10sp"
			android:text="City"
			android:textColor="#FFFFFF" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/latitude_text"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Latitude"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/latitude_x"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="TextView"
						android:textColor="#FFFFFF" />

				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/longitude_text"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Longitude"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/longitude_y"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="TextView"
						android:textColor="#FFFFFF" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/date1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Date"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/date1_temperature"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Unknown"
						android:textColor="#FFFFFF" />

					<ImageView
						android:id="@+id/weather_icon_1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:scaleType="fitCenter"
						android:scaleX="0.5"
						android:scaleY="0.5"
						app:srcCompat="@drawable/iconfinder_weather_11_2682840" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/date2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Date"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/date2_temperature"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Unknown"
						android:textColor="#FFFFFF" />

					<ImageView
						android:id="@+id/weather_icon_2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:scaleType="fitCenter"
						android:scaleX="0.5"
						android:scaleY="0.5"
						app:srcCompat="@drawable/iconfinder_weather_11_2682840" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/date3"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Date"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/date3_temperature"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Unknown"
						android:textColor="#FFFFFF" />

					<ImageView
						android:id="@+id/weather_icon_3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:scaleType="fitCenter"
						android:scaleX="0.5"
						android:scaleY="0.5"
						app:srcCompat="@drawable/iconfinder_weather_11_2682840" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/date4"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Date"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/date4_temperature"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Unknown"
						android:textColor="#FFFFFF" />

					<ImageView
						android:id="@+id/weather_icon_4"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:scaleType="fitCenter"
						android:scaleX="0.5"
						android:scaleY="0.5"
						app:srcCompat="@drawable/iconfinder_weather_11_2682840" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/date5"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Date"
						android:textColor="#FFFFFF" />

					<TextView
						android:id="@+id/date5_temperature"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Unknown"
						android:textColor="#FFFFFF" />

					<ImageView
						android:id="@+id/weather_icon_5"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:scaleType="fitCenter"
						android:scaleX="0.5"
						android:scaleY="0.5"
						app:srcCompat="@drawable/iconfinder_weather_11_2682840" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>