<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/linearLayout2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/linearLayout3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="25dp">

		<TextView
			android:id="@+id/x_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="x: -32"
			android:textSize="36sp" />

		<TextView
			android:id="@+id/y_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="y: 13"
			android:textSize="36sp" />

		<TextView
			android:id="@+id/current_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="TextView"
			android:textSize="36sp" />

	</LinearLayout>

	<fragment
		android:id="@+id/fragment_sun"
		android:name="com.example.astroweather.SunFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		tools:layout="@layout/fragment_sun" />

	<fragment
		android:id="@+id/fragment_moon"
		android:name="com.example.astroweather.MoonFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		tools:layout="@layout/fragment_moon" />

</LinearLayout>
